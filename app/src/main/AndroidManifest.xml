<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!--
          Izin untuk mengakses internet, diperlukan jika aplikasi ingin melakukan koneksi jaringan.
      -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
        Bagian <application> berisi konfigurasi aplikasi seperti tema, ikon, dan aktivitas.
    -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteApp"
        tools:targetApi="31">

        <!--
            HomeActivity: Halaman utama setelah login.
            android:exported="false" berarti tidak dapat diakses oleh aplikasi lain.
        -->
        <activity
            android:name=".ui.note.HomeActivity"
            android:exported="false" />

        <!--
            RegisterActivity: Halaman pendaftaran pengguna.
            android:exported="false" berarti hanya bisa diakses dari dalam aplikasi.
        -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false" />

        <!--
            LoginActivity: Halaman login.
            - android:exported="true" berarti aktivitas ini dapat diakses oleh aplikasi lain (wajib untuk MainActivity jika ingin diluncurkan).
            - intent-filter digunakan untuk menjadikan aktivitas ini sebagai titik masuk utama aplikasi.
        -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <!-- Menandai aktivitas ini sebagai titik masuk utama aplikasi -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
